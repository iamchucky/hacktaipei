doctype html
html
  head
    title Hack.Taipei
    link(rel='stylesheet', href='/styles/app.css')
  body.map-layout(ng-app='app', ng-controller='AppController as appCtrl')
    .header(ui-view='header')

    .container-fluid
      .map-pane(ui-view='map', ng-class="{'shrink-right':appCtrl.globalState.rightPaneIsShown}")
      .left-pane(ui-view='left')
      .right-pane(ui-view='right', ng-class="{'show':appCtrl.globalState.rightPaneIsShown}")

    script(src='/lib/promise-polyfill/Promise.min.js')

    script(src='/lib/angular/angular.min.js')
    //script(src='/lib/angular/angular-ui-router.min.js')
    script(src='/lib/angular/angular-ui-router.js')
    script(src='/lib/moment/moment.min.js')
    script(src='/lib/moment/zh-tw.js')
    script(src='/lib/angular/angular-moment.min.js')
    script(src='/lib/bootstrap/ui-bootstrap-tpls.min.js')

    script(src='/components/app.js')
    script(src='/components/google-map/google-map.js')
    script(src='/components/google-map/google-map-store.js')
    script(src='/components/post-list/post-list.js')
    script(src='/components/post-list/post-list-store.js')
    script(src='/components/post-detail/post-detail.js')
    script(src='/components/post-detail/post-detail-store.js')
    script(src='/components/post-new/post-new.js')
    script(src='/components/globalState.js')

    script(type='text/javascript')
      include ../scripts/indexMap.js
    script(src='https://maps.googleapis.com/maps/api/js?v=3.exp&language=zh_TW&callback=initMap', async, defer)

